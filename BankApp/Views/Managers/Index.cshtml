@model IEnumerable<BankApp.Models.Manager>

@{
    ViewBag.Title = "Managers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Managers</h2>
@if (!Model.Any())
{
    <p>We don't have any managers yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Manager</th>
            <th>Role</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@Html.ActionLink(manager.FullName, "Details", "Managers", new { id = manager.Id }, null)</td>
                <td>@manager.Role.Name</td>
            </tr>
        }
        </tbody>
    </table>
}