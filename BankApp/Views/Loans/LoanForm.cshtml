@model BankApp.ViewModels.LoanFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Loans"))
{
    @Html.ValidationSummary(true, "Please, fill in the following required fields.")
    <div class="form-group">
        @Html.LabelFor(l => l.Name)
        @Html.TextBoxFor(l => l.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Period)
        @Html.TextBoxFor(l => l.Period, new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Period)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Procent)
        @Html.TextBoxFor(l => l.Procent, new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Procent)
    </div>
    @Html.HiddenFor(l => l.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
